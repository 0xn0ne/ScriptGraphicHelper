            <TextBlock Text="" Margin="0,5" FontSize="24" Style="{StaticResource MaterialDesignHeadline4TextBlock}"/>
            <TextBlock Text="" Margin="0,5" FontSize="24" Style="{StaticResource MaterialDesignHeadline4TextBlock}"/>
            <TextBlock Text="" Margin="0,5" FontSize="24" Style="{StaticResource MaterialDesignHeadline4TextBlock}"/>
            <TextBlock Text="" Margin="0,5" FontSize="24" Style="{StaticResource MaterialDesignHeadline4TextBlock}"/>
            <TextBlock Text="" Margin="0,5" FontSize="24" Style="{StaticResource MaterialDesignHeadline4TextBlock}"/>
        </StackPanel>
    </Grid>
</Window>
